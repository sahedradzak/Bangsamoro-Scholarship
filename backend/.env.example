# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Database (Railway provides DATABASE_URL automatically)
DATABASE_URL=postgres://user:password@host:5432/dbname

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.railway.app

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app,http://localhost:3000

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://your-frontend.railway.app,https://your-backend.railway.app

# Railway-specific (optional, set automatically by Railway)
RAILWAY_STATIC_URL=your-backend.railway.app
